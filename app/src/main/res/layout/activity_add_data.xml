<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yena.donotlate.AddDataActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_insert_title"
            android:paddingTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="제목을 입력해주세요."
            android:maxLength="15"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingBottom= "5dp"
            android:text="* 날짜를 입력해주세요."
            android:textSize="20sp"
            android:id="@+id/tv_insert_date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingBottom= "5dp"
            android:text="* 시간을 입력해주세요."
            android:textSize="20sp"
            android:id="@+id/tv_insert_time" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="* 장소를 선택해주세요."
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:paddingBottom= "5dp"
            android:id="@+id/tv_insert_place" />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/fragment_map" />

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- states when button is not pressed -->

    <!-- non focused states -->
    <item android:state_focused="false" android:state_selected="false"
        android:state_pressed="false"
        android:drawable="@drawable/tab_unselected_yenatheme"	/>
    <item android:state_focused="false"
        android:state_selected="true"
        android:state_pressed="false"
        android:drawable="@drawable/tab_selected_yenatheme"/>
    <item android:state_focused="true"
        android:state_selected="false"
    android:state_pressed="false"
    android:drawable="@drawable/tab_unselected_focused_yenatheme"	/>
    <item android:state_focused="true"	android:state_selected="true"
        android:state_pressed="false"
        android:drawable="@drawable/tab_selected_focused_yenatheme"	/>


    <!-- Stateds when button is pressed	-->

    <!-- non focuesd stateds -->
    <item android:state_focused="false"	android:state_selected="false"
        android:state_pressed="true"
        android:drawable="@drawable/tab_unselected_pressed_yenatheme"	/>
    <item android:state_focused="false"	android:state_selected="true"
        android:state_pressed="true"
        android:drawable="@drawable/tab_selected_pressed_yenatheme"	/>

    <!-- focuesd stateds (such as when focuesd with a d-pad or mouse hover) -->
    <item android:state_focused="true"	android:state_selected="false"
        android:state_pressed="true"
        android:drawable="@drawable/tab_unselected_pressed_yenatheme"	/>
    <item android:state_focused="true"	android:state_selected="true"
        android:state_pressed="true"
        android:drawable="@drawable/tab_selected_pressed_yenatheme"	/>
</selector>